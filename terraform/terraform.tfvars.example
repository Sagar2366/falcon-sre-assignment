# Example terraform.tfvars file
# Copy this to terraform.tfvars and modify for your environment

# Environment configuration
environment = "dev"  # or "staging" or "production"

# AWS Configuration
aws_region = "us-west-2"

# Project Configuration
project_name = "sre-assessment"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.10.0/24", "10.0.11.0/24"]

# EKS Configuration
kubernetes_version = "1.28"
node_group_desired_size = 2
node_group_max_size     = 4
node_group_min_size     = 1
node_group_instance_types = ["t3.medium"]

# Lambda Configuration
cost_report_recipient_email = "admin@crowdstrike.com"
cost_report_sender_email    = "cost-reports@crowdstrike.com"
alert_email                = "alerts@crowdstrike.com"

# Tags
tags = {
  Project     = "sre-assessment"
  Owner       = "sre-team"
  CostCenter  = "development"
  ManagedBy   = "terraform"
} 